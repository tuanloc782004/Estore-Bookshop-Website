package com.estorebookshop.repository;

import java.time.LocalDateTime;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;

import com.estorebookshop.model.Cart;

public interface CartRepository extends JpaRepository<Cart, Long> {

	List<Cart> findByUsernameContaining(String username);

    List<Cart> findByUsernameContainingAndUpdatedAtAfter(String username, LocalDateTime date);

    List<Cart> findByUsernameContainingAndUpdatedAtBefore(String username, LocalDateTime date);
	
}
