<div class="text-center mb-3" th:fragment="pagination">
	<nav class="blog-pagination justify-content-center d-flex">
		<ul class="pagination">
			<!-- Link đến trang trước nếu có -->
			<li th:if="${currentPage > 1}" class="page-item"><a
				th:href="@{${language != null && language != '' ? '?language=' + language + '&' : '?'}
					${category != null && category != '' ? 'category=' + category + '&' : ''}
					${sort != null && sort != '' ? 'sort=' + sort + '&' : ''}pageNo=' + (${currentPage - 1})}"
				class="page-link">«</a></li>

			<!-- Các số trang, đánh dấu trang hiện tại -->
			<li th:each="i : ${#numbers.sequence(1, totalPage)}"
				th:classappend="${currentPage == i ? 'active' : ''}"
				class="page-item"><a
				th:href="@{${language != null && language != '' ? '?language=' + language + '&' : '?'}
					${category != null && category != '' ? 'category=' + category + '&' : ''}
					${sort != null && sort != '' ? 'sort=' + sort + '&' : ''}pageNo=' + ${i}}"
				th:text="${i}" class="page-link"></a></li>

			<!-- Link đến trang kế tiếp nếu có -->
			<li th:if="${currentPage < totalPage}" class="page-item"><a
				th:href="@{${language != null && language != '' ? '?language=' + language + '&' : '?'}
					${category != null && category != '' ? 'category=' + category + '&' : ''}
					${sort != null && sort != '' ? 'sort=' + sort + '&' : ''}pageNo=' + (${currentPage + 1})}"
				class="page-link">»</a></li>
		</ul>
	</nav>
</div>
