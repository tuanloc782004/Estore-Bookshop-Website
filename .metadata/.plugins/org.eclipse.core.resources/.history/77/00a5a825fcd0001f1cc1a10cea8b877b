<div class="text-center mb-3" th:fragment="user-pagination">
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item" th:classappend="${currentPage == 1 ? 'disabled' : ''}">
				<a class="page-link" th:href="@{${keyword != null && keyword != '' ? '?keyword=' + keyword + '&' : '?'} + 'pageNo=' + (currentPage - 1)}">«</a>
			</li>
			<li class="page-item" th:each="i : ${#numbers.sequence(1, totalPage)}" th:classappend="${currentPage == i ? 'active' : ''}">
				<a class="page-link" th:href="@{${keyword != null && keyword != '' ? '?keyword=' + keyword + '&' : '?'} + 'pageNo=' + i}" th:text="${i}"></a>
			</li>
			<li class="page-item" th:classappend="${currentPage == totalPage ? 'disabled' : ''}">
				<a class="page-link" th:href="@{${keyword != null && keyword != '' ? '?keyword=' + keyword + '&' : '?'} + 'pageNo=' + (currentPage + 1)}">»</a>
			</li>
		</ul>
	</nav>
</div>
