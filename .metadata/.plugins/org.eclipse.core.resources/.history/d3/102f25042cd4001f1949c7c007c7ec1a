<div class="text-center mb-3" th:fragment="pagination">
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<!-- Link đến trang trước -->
			<li th:classappend="${currentPage > 1} ? '' : 'disabled'"><a
				th:href="${currentPage > 1} ? '${baseUrl}?pageNo=' + (currentPage - 1) : '#'"
				aria-label="Previous"> <span aria-hidden="true">«</span>
			</a></li>

			<!-- Số trang -->
			<li th:each="i : ${#numbers.sequence(1, totalPages)}"
				th:classappend="${i == currentPage} ? 'active' : ''"><a
				th:href="'${baseUrl}?pageNo=' + ${i} + (language != null ? '&language=' + language : '') + (category != null ? '&category=' + category : '') + (sort != null ? '&sort=' + sort : '')">
					<span th:text="${i}">1</span>
			</a></li>

			<!-- Link đến trang kế tiếp -->
			<li th:classappend="${currentPage < totalPages} ? '' : 'disabled'">
				<a
				th:href="${currentPage < totalPages} ? '${baseUrl}?pageNo=' + (currentPage + 1) : '#'"
				aria-label="Next"> <span aria-hidden="true">»</span>
			</a>
			</li>
		</ul>
	</nav>
</div>
